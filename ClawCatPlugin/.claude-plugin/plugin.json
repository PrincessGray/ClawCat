{
  "name": "clawcat",
  "version": "1.0.0",
  "description": "Live2D desktop pet with Claude Code integration - Visual feedback and interaction overlay",
  "author": {
    "name": "PrincessGray"
  },
  "repository": "https://github.com/PrincessGray/ClawCat",
  "license": "MIT",
  "keywords": ["live2d", "desktop-pet", "visual-feedback", "hooks"],
  "mcpServers": {
    "clawcat-service": {
      "command": "python",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/tools/service_manager.py",
        "start"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}

